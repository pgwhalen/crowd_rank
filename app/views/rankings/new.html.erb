<% if user_signed_in? %>
<%= @team_group.short_name %>
<% else %>
<h1> not signed in </hi>
<% end %>

<ul id="teams" class="list-group">
	<% @team_group.teams.each do |t| %>
		<li class="list-group-item"
				id="team_id_<%= t.id %>">
				<span class="badge">14</span>
				<%= t.nickname %>
		</li>
	<% end %>
</ul>

